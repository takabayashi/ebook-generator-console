<%= form_for @book_template, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label 'Template Zip', :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :zip, :class => 'text_field', accept: 'application/zip'  %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                book_templates_path, :class => 'btn' %>
  </div>
<% end %>
